<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shruthi.elab">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:theme="@style/AppTheme">
        <activity android:name=".Admin.TechnicianReport"></activity>
        <activity android:name=".Admin.ViewTechnicians" />
        <activity android:name=".Admin.AddTechnicians" />
        <activity android:name=".Admin.ViewImageReport" />
        <activity android:name=".Admin.ViewReportHistory" />
        <activity android:name=".SelectUser" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".User.UserLogin" />
        <activity android:name=".User.VerifyPhone" />
        <activity android:name=".Admin.PatientReport" />
        <activity
            android:name=".User.BootAppointment"
            android:label="@string/title_activity_boot_appointment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".User.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Admin.SendReport" />
        <activity android:name=".Admin.AdminActivity" />
        <activity android:name=".User.AddAppointmentActivity" />
        <activity
            android:name=".Admin.AdminDashBoard"
            android:label="@string/title_activity_admin_dash_board"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Admin.ViewAppointmentDetails" />
    </application>

</manifest>