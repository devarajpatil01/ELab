<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.shruthi.elab.User.AddAppointment">

       <android.support.v7.widget.Toolbar
           android:id="@+id/my_toolbar"
           android:layout_width="match_parent"
           android:layout_height="?attr/actionBarSize"
           android:background="?attr/colorPrimary"
           android:elevation="4dp"
           android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
           app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Book Appointment"
                 android:textColor="@color/colorWhie"
                 android:textSize="20dp"
                 android:layout_gravity="center"
                 android:fontFamily="sans-serif-smallcaps"
                 />
          </LinearLayout>

       </android.support.v7.widget.Toolbar>

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"         >


        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Name"
            android:imeOptions="actionNext"
            android:padding="20dp" />

        <EditText
            android:id="@+id/edt_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:imeOptions="actionNext"
            android:hint="DOB"
            android:inputType="date"
            android:padding="20dp" />

        <EditText
            android:id="@+id/edt_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Age"
            android:imeOptions="actionNext"
            android:maxLength="3"
            android:inputType="number"
            android:padding="20dp" />

        <EditText
            android:id="@+id/edt_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Mobile Number"
            android:maxLength="10"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:padding="20dp" />

        <EditText
            android:id="@+id/edt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Address"
            android:imeOptions="actionNext"
            android:padding="20dp" />

        <EditText
            android:id="@+id/edt_emailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="EmailId"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:padding="20dp" />

        <EditText
            android:id="@+id/edit_father_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Father Name"
            android:imeOptions="actionNext"
            android:padding="20dp" />


        <EditText
            android:id="@+id/edt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Date..."
            android:editable="false"
            android:imeOptions="actionNext"
            android:padding="20dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_regarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Regarding"
            android:imeOptions="actionDone"
            android:padding="20dp" />

        <Button
            android:id="@+id/btn_add_appointment"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="20dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:text="Add" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>